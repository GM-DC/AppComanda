<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cv_plato">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/effect_clic">


        <ImageView
            android:id="@+id/iv_iconPlato"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_platillo"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tx_plato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="@dimen/BT_PP_Plato_TextoSize"
                android:gravity="center_vertical"
                tools:text="Salchipapa"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tx_platoPrecio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textSize="@dimen/BT_PP_Plato_TextoSize"
                android:gravity="center_vertical"
                tools:text="S/.25"
                android:textStyle="bold"/>


        </LinearLayout>




    </LinearLayout>




</androidx.cardview.widget.CardView>