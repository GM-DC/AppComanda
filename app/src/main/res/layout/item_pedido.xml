<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_pedido"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="wrap_content"
    android:layout_margin="0.8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true"
    android:background="@color/trans"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="3dp"
            android:paddingLeft="8dp"
            android:layout_margin="0.5dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/tv_nombrePlato"
                    android:layout_width="430dp"
                    android:layout_height="30dp"
                    android:textColor="#FF0E83C9"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    tools:text="Pollo a la brasa"
                    android:layout_marginBottom="3dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/precio"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        android:text="PRECIO"
                        android:textColor="#11468F"
                        />

                    <TextView
                        android:id="@+id/cantidad"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textColor="#11468F"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        android:gravity="center"
                        android:text="CANTIDAD" />


                    <TextView
                        android:id="@+id/total"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        android:textColor="#11468F"
                        android:text="TOTAL"
                        android:textAlignment="textEnd"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_precio"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        tools:text="S/.25.36"
                        android:textColor="#11468F"
                        />

                    <TextView
                        android:id="@+id/tv_cantidad"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:textColor="#11468F"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        android:gravity="center"
                        tools:text="10" />


                    <TextView
                        android:id="@+id/tv_precioTotal"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                        android:textColor="#11468F"
                        tools:text="S/.2'000.00"
                        android:textAlignment="textEnd"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                >



            </LinearLayout>

        </LinearLayout>














</androidx.cardview.widget.CardView>