<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/RV_PP_Pedido_Width"
    android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:dividerPadding="2dp">

    <TextView
        android:id="@+id/tv_cantidad"
        android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_C_O"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:textColor="#757575"
        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
        android:textStyle="bold"
        tools:text="10" />

    <TextView
        android:id="@+id/tv_nombrePlato"
        android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_NP"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
        android:textStyle="bold"
        tools:text="Pollo a la brasa"
         />

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_P_PT"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        tools:text="S/.25.36"
         />

    <TextView
        android:id="@+id/tv_precioTotal"
        android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_P_PT"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:textColor="#757575"
        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
        android:textStyle="bold"
        tools:text="S/.2'000.00" />

    <TextView
        android:id="@+id/tv_observacion"
        android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_C_O"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:textSize="@dimen/TV_PP_Pedido_TextoSize"
        android:textStyle="bold"
        tools:text="O"
        />

</LinearLayout>