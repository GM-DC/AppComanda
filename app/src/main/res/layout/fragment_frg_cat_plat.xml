<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".FrgCatPlat">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_TitleZona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zona"/>
            <TextView
                android:id="@+id/tv_TitleMesa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa"/>



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categoria"
                android:layout_width="600dp"
                android:layout_height="200dp"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_platillo"
                android:layout_width="600dp"
                android:layout_height="400dp"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pedido"
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp">

                    <Button
                        android:id="@+id/bt_aumentar"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        />
                    <Button
                        android:id="@+id/bt_disminuir"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        />
                    <Button
                        android:id="@+id/bt_detalle"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N"
                        />
                    <Button
                        android:id="@+id/bt_precuenta"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pre-Cuenta"
                        />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/tv_PTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:text="S/. 0.0"
                />

            <Button
                android:id="@+id/bt_enviarComanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enviar"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>