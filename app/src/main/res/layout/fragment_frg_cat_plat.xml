<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FrgCatPlat"
    android:background="#0E83C9">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/RV_PP_Pedido_Margin">

                    <TextView
                        android:id="@+id/tv_TitleZona"
                        android:layout_width="250dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Zona"/>
                    <TextView
                        android:id="@+id/tv_TitleMesa"
                        android:layout_width="250dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Mesa"/>

                </LinearLayout>

            <androidx.appcompat.widget.SearchView
                android:id="@+id/sv_buscarPlato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                android:background="@drawable/input_buscardor"
                android:iconifiedByDefault="true"
                android:queryHint="Buscar Producto" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categoria"
                android:layout_width="600dp"
                android:layout_height="190dp"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_platillo"
                android:layout_width="600dp"
                android:layout_height="380dp"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pedido"
                    android:layout_width="450dp"
                    android:layout_height="600dp"
                    android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/bt_aumentar"
                        android:padding="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:textSize="22sp"
                        android:textColor="#0E83C9"
                        android:text="+"
                        />
                    <Button
                        android:id="@+id/bt_disminuir"
                        android:padding="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:textSize="22sp"
                        android:textColor="#0E83C9"
                        android:text="-"
                        />
                    <Button
                        android:id="@+id/bt_detalle"
                        android:padding="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:textSize="22sp"
                        android:textColor="#0E83C9"
                        android:text="N"
                        />
                    <Button
                        android:id="@+id/bt_precuenta"
                        android:padding="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:textSize="15sp"
                        android:text="Pre-Cuenta"
                        android:textColor="#0E83C9"
                        />
                    <Button
                        android:id="@+id/bt_cancelar"
                        android:padding="0dp"
                        android:backgroundTint="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="80dp"
                        android:textSize="15sp"
                        android:text="Cancelar"
                        android:textColor="#0E83C9"
                        />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/tv_PTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:text="S/. 0.0"
                />

            <Button
                android:id="@+id/bt_enviarComanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:text="Enviar"
                android:textColor="#0E83C9"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>