<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrgCatPlat">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_categoria"
                android:layout_width="@dimen/APP_RV_PP_Width"
                android:layout_height="@dimen/APP_RV_PP_Height_Categoria"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_platillo"
                android:layout_width="@dimen/APP_RV_PP_Width"
                android:layout_height="@dimen/APP_RV_PP_Height_Plato"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pedido"
                android:layout_width="@dimen/APP_RV_PP_Width_Pedido"
                android:layout_height="@dimen/APP_RV_PP_Height_Pedido"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"/>

        </LinearLayout>
    </LinearLayout>




</FrameLayout>