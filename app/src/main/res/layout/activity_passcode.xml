<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityPasscode">

    <LinearLayout
        android:layout_width="@dimen/TLWidth_Passcode"
        android:layout_height="@dimen/TLHeight_Passcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bienvenidaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIENVENIDO GIAN"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtCodigo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:inputType="text|textPassword"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:maxLength="5"
                android:layout_marginBottom="30dp"
                android:textSize="@dimen/TVPasscode"
                tools:text="12346"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_01"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="1" />

            <Button
                android:id="@+id/btn_02"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="2"

                />

            <Button
                android:id="@+id/btn_03"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_04"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="4" />

            <Button
                android:id="@+id/btn_05"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="5" />

            <Button
                android:id="@+id/btn_06"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_07"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="7" />

            <Button
                android:id="@+id/btn_08"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="8" />

            <Button
                android:id="@+id/btn_09"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/blanco"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="0" />

            <Button
                android:id="@+id/btn_00"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="0" />

            <Button
                android:id="@+id/btn_Limpiar"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:layout_span="1"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_500"
                tools:text="E" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>