<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityPasscode"
    android:background="#0E83C9">

    <LinearLayout
        android:layout_width="@dimen/TLWidth_Passcode"
        android:layout_height="@dimen/TLHeight_Passcode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bienvenidaNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIENVENIDO GIAN"
                android:textSize="@dimen/APasscore_TvBienvenida_size"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:shadowColor="@color/white"
                />

            <TextView
                android:id="@+id/txtCodigo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/APasscore_TvCodigo_height"
                android:inputType="text|textPassword"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:maxLength="6"
                android:layout_marginBottom="30dp"
                android:textSize="@dimen/APasscore_TvCodigo_size"
                tools:text="12346"
                android:textColor="@color/white"
                tools:ignore="TextViewEdits" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_01"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                android:textColor="#0E83C9"
                android:backgroundTint="@color/white"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/white"
                tools:text="1"
                />

            <Button
                android:id="@+id/btn_02"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="2"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                />

            <Button
                android:id="@+id/btn_03"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_04"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="4" />

            <Button
                android:id="@+id/btn_05"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="5" />

            <Button
                android:id="@+id/btn_06"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_07"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="7" />

            <Button
                android:id="@+id/btn_08"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="8" />

            <Button
                android:id="@+id/btn_09"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="9" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/blanco"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="0" />

            <Button
                android:id="@+id/btn_00"
                android:backgroundTint="@color/white"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                app:strokeColor="@color/purple_700"
                tools:text="0" />

            <Button
                android:id="@+id/btn_Limpiar"
                android:textColor="#0E83C9"
                android:layout_width="@dimen/BTWidht_Passcode_Numero"
                android:layout_height="@dimen/BTHeight_Passcode_Numero"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:textSize="@dimen/BTTexto"
                app:cornerRadius="@dimen/BTRadius_PC_Numero"
                android:padding="0dp"
                android:text="E"
                app:strokeColor="@color/purple_700"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>