<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/BT_PP_Zonas_Width"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:outlineSpotShadowColor="#3F51B5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/efecto_clic"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_iconZona"
            android:layout_width="40dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_zona" />


        <TextView
            android:id="@+id/tx_zona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:textSize="@dimen/BT_PP_Zomas_TextoSize"
            tools:text="Zona 01"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />



    </LinearLayout>

</androidx.cardview.widget.CardView>