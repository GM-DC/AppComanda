<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panelPedido">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/RV_PP_Pedido_Margin"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="165dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_zona"
            android:layout_width="@dimen/RV_PP_Zona_Width"
            android:layout_height="@dimen/RV_PP_Zona_Height"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.031"></androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mesa"
            android:layout_width="@dimen/RV_PP_Mesa_Width"
            android:layout_height="@dimen/RV_PP_Zona_Height"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.121"></androidx.recyclerview.widget.RecyclerView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_categoria"
            android:layout_width="@dimen/RV_PP_Categoria_Wight"
            android:layout_height="@dimen/RV_PP_Categoria_Height"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.415"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.239" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_platillo"
            android:layout_width="@dimen/RV_PP_Plato_Width"
            android:layout_height="@dimen/RV_PP_Plato_Height"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.467">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="@dimen/RV_PP_Pedido_Width"
            android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
            android:orientation="horizontal"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            >

            <TextView
                android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_C_O"
                android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
                android:text="N"
                android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_NP"
                android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
                android:text="Pedido"
                android:layout_margin="1dp"
                android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_P_PT"
                android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
                android:text="Precio"
                android:layout_margin="1dp"
                android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_P_PT"
                android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
                android:text="P. Total"
                android:layout_margin="1dp"
                android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="@dimen/TV_PP_Pedido_TextoWidht_C_O"
                android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
                android:text="Obs"
                android:layout_margin="1dp"
                android:textSize="@dimen/TV_PP_Pedido_TextoSize"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pedido"
                android:layout_width="@dimen/RV_PP_Pedido_Width"
                android:layout_height="@dimen/RV_PP_Pedido_Height"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin" >
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/RV_PP_Pedido_Margin"
                android:orientation="vertical">

                <Button
                    android:id="@+id/bt_aumentar"
                    android:layout_width="@dimen/BT_PP_Windth"
                    android:layout_height="@dimen/BT_PP_Height"
                    android:text="+"
                    android:textSize="@dimen/TV_PP_Pedido_TextoSize"/>

                <Button
                    android:id="@+id/bt_disminuir"
                    android:layout_width="@dimen/BT_PP_Windth"
                    android:layout_height="@dimen/BT_PP_Height"
                    android:text="-"
                    android:textSize="@dimen/TV_PP_Pedido_TextoSize"/>

                <Button
                    android:id="@+id/bt_detalle"
                    android:layout_width="@dimen/BT_PP_Windth"
                    android:layout_height="@dimen/BT_PP_Height"
                    android:text="N"
                    android:textSize="@dimen/TV_PP_Pedido_TextoSize"/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="@dimen/BT_PP_Windth"
                    android:layout_height="@dimen/BT_PP_Height"
                    android:text="P"
                    android:textSize="@dimen/TV_PP_Pedido_TextoSize"/>



                <Button
                    android:id="@+id/button4"
                    android:layout_width="@dimen/BT_PP_Windth"
                    android:layout_height="@dimen/BT_PP_Height"
                    android:text="E"
                    android:textSize="@dimen/TV_PP_Pedido_TextoSize"/>





            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_PTotal"
            android:layout_width="@dimen/RV_PP_Pedido_Width"
            android:layout_height="@dimen/TV_PP_Pedido_TextoHeight"
            android:text="100000000"
            android:textAlignment="textEnd"
            android:layout_margin="@dimen/RV_PP_Pedido_Margin"
            android:textStyle="bold"
            android:textSize="@dimen/TV_PP_Pedido_TextoSize"
            >

        </TextView>

    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>